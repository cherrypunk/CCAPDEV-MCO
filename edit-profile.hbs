{{> edit-profile-nav}}

<div class="all">
    <div class="container">
        <h1 id="profile_name">Edit Profile of {{email}}</h1>
        <form name="edit_profile" action="/edit_profile/{{email}}" method="post" required="required">
            <div class="form-group ">
                <label for="profile-pic">Profile Picture:</label>
                <input type="text" id="profile_pic" name="profile_pic" class="form-control">
            </div>

            <div class="form-group ">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" placeholder="Your name" class="form-control ">
            </div>

            <div class="form-group">
                <label for="contact">Contact:</label>
                <input type="number" min="0" id="contact" name="contact" placeholder="Your contact info"
                    class="form-control ">
            </div>

            <div class="form-group">
                <label for="biography">Biography:</label>
                <textarea id="biography" name="biography" placeholder="Your biography" class="form-control "></textarea>
            </div>

            <div class="form-group">
                <label for="links">Links:</label>
                <input type="text" id="links" name="links" placeholder="Your links" class="form-control ">
            </div>

            <div>
                <input type="submit" value="Update Profile" class="btn btn-primary">
            </div>
        </form>
    </div>

</div>